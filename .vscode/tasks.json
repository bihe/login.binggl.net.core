{
    "version": "2.0.0",
    "command": " ",
    "args": [],
    "tasks": [
        {
            "group": "build",
            "type": "shell",
            "label": "BUILD: build",
            "command": "dotnet",
            "args": [
                "build",
                "--no-restore"
            ],
            //"isShellCommand": true,
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "group": "build",
            "type": "shell",
            "label": "BUILD: RE-build",
            "command": "dotnet",
            "args": [
                "build",
                "--no-incremental",
                "--verbosity n",
                "--force"
            ],
            //"isShellCommand": true,
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "group": "test",
            "label": "TEST: xunit.tests",
            "command": "dotnet",
            "args": [
                "test",
                "--no-restore",
            ],
            "options": {
                "cwd": "${workspaceRoot}/Login.XTests"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "group": "test",
            "label": "TEST: list tests",
            "command": "dotnet",
            "args": [
                "test",
                "--no-restore",
                "-t"
            ],
            "options": {
                "cwd": "${workspaceRoot}/Login.XTests"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        }

        // {
        //     "taskName": "TestAll",
        //     "dependsOn": [
        //         "Unit Tests"
        //     ]
        // }
    ]
}